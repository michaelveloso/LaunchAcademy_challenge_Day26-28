<%= form_for(@question) do |form| %>


  <div class="field column large-12">
    <%= form.label :title %><br>
    <%= form.text_field :title, placeholder: @question.title %>
  </div>
  <div class="field column large-12">
    <%= form.label :description %><br>
    <%= form.text_field :description, placeholder: @question.description %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
